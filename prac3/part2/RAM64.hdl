/**
 * Memory of 64 registers, each 16 bit-wide. Out holds the value
 * stored at the memory location specified by address. If load==1, then 
 * the in value is loaded into the memory location specified by address 
 * (the loaded value will be emitted to out from the next time step onward).
 */

CHIP RAM64 {
    IN in[16], load, address[6];
    OUT out[16];

    PARTS:
    DMux8Way(in=load, sel=address, a=outputA, b=outputB, c=outputC, d=outputD, e=outputE, f=outputF, g=outputG, h=outputH);
    RAM8(in=input16, load=outputA, address=address out=o1);
    RAM8(in=input16, load=outputB, address=address out=o2);
    RAM8(in=input16, load=outputC, address=address out=o3);
    RAM8(in=input16, load=outputD, address=address out=o4);
    RAM8(in=input16, load=outputE, address=address out=o5);
    RAM8(in=input16, load=outputF, address=address out=o6);
    RAM8(in=input16, load=outputG, address=address out=o7);
    RAM8(in=input16, load=outputH, address=address out=o8);
    Mux8Way16(a=o1, b=o2, c=o3, d=o4, e=o5, f=o6, g=o7, h=o8, sel=address, out=out);
}